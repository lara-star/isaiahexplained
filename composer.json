{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
	    "way/generators": "~3.0",
        "twitter/bootstrap": "dev-master",
        "conarwelsh/mustache-l4": "dev-master",
	    "davejamesmiller/laravel-boris": "dev-master",
		"anahkiasen/flatten": "dev-master",
		"barryvdh/laravel-ide-helper": "~1.11@dev",
		"doctrine/dbal": "v2.4.2",
		"roumen/sitemap": "~2.4@dev",
		"nesbot/carbon": "~1.13"
	},
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.7.*"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php",
            "app/repositories"
		],
		"psr-4": {
			"IsaiahExplained\\": "app/src/"
		},
		"files": [
			"app/helpers.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php-cli artisan clear-compiled",
			"php-cli artisan optimize"
		],
		"post-update-cmd": [
			"php-cli artisan clear-compiled",
            "php-cli artisan ide-helper:generate",
			"php-cli artisan optimize"
		],
		"post-create-project-cmd": [
			"php-cli artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
